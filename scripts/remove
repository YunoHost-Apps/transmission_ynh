#!/bin/bash

source _common.sh
source /usr/share/yunohost/helpers

#=================================================
# REMOVE SERVICE INTEGRATION IN YUNOHOST
#=================================================
ynh_script_progression "Removing system configurations related to $app..."

# Remove the service from the list of services known by YunoHost (added from `yunohost service add`)
if yunohost service status transmission-daemon >/dev/null 2>&1; then
	yunohost service remove transmission-daemon
fi

ynh_config_remove_nginx

ynh_safe_rm "/etc/transmission-daemon/settings.json"

# Web interface
ynh_safe_rm /usr/share/transmission

# And data
ynh_safe_rm /var/lib/transmission-daemon

# Kernel parameters
if [ -e /proc/sys/net/core/rmem_max ]
then
	ynh_safe_rm /etc/sysctl.d/90-transmission.conf
	sysctl --load=/etc/sysctl.d/90-transmission.conf
fi

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Removal of $app completed"
